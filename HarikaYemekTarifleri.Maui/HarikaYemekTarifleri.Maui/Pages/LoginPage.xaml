<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="HarikaYemekTarifleri.Maui.Pages.LoginPage"
             Title="Giriş">
	<VerticalStackLayout Padding="24" Spacing="12">
		<Entry Placeholder="Kullanıcı adı" Text="{Binding UserName}" />
		<Entry Placeholder="Şifre" IsPassword="True" Text="{Binding Password}" />
		<Button Text="Giriş" Command="{Binding LoginCommand}" />
		<Label Text="{Binding Error}" TextColor="Red" />
	</VerticalStackLayout>
</ContentPage>
