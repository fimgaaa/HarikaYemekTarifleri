<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:controls="clr-namespace:Microsoft.Maui.Controls;assembly=Microsoft.Maui.Controls"
             x:Class="HarikaYemekTarifleri.Maui.Pages.RecipesPage"
             x:Name="page"
             Title="Tarifler">

    <controls:NavigationPage.TitleView>
        <Grid ColumnDefinitions="*,Auto"
              Padding="0,0,8,0"
              ColumnSpacing="8"
              VerticalOptions="Center"
              HorizontalOptions="FillAndExpand"
              WidthRequest="{Binding Source={x:Reference page}, Path=Width}"
              MinimumWidthRequest="{Binding Source={x:Reference page}, Path=Width}">
            <Label Text="Tarifler"
                   FontAttributes="Bold"
                   FontSize="20"
                   VerticalOptions="Center"
                   HorizontalOptions="Start" />
            <HorizontalStackLayout Grid.Column="1"
                                    HorizontalOptions="End"
                                    Spacing="8">

                <ImageButton Source="profile.png"
                              Command="{Binding ProfileCommand}"
                              BackgroundColor="Transparent"
                              HeightRequest="40"
                              WidthRequest="40"
                              Padding="0"
                              VerticalOptions="Center" />
                <ImageButton Source="logout.png"
                              Command="{Binding LogoutCommand}"
                              BackgroundColor="Transparent"
                              HeightRequest="25"
                              WidthRequest="25"
                              Padding="0"
                              VerticalOptions="Center" />

            </HorizontalStackLayout>
        </Grid>
    </controls:NavigationPage.TitleView>

    <!--<ContentPage.ToolbarItems>

        <ToolbarItem IconImageSource="logout.png"
                     Order="Primary"
                     Priority="1"
                     Command="{Binding LogoutCommand}" />
    </ContentPage.ToolbarItems>-->

    <Grid Padding="8">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <!-- FILTRE / ARAMA BLOĞU -->
        <Frame Grid.Row="0"
               Padding="16"
               CornerRadius="12"
               BackgroundColor="{AppThemeBinding Light={StaticResource White}, Dark={StaticResource Gray900}}"
               HasShadow="True"
               HorizontalOptions="FillAndExpand">
            <VerticalStackLayout Spacing="8" HorizontalOptions="FillAndExpand">

                <Entry Placeholder="Tarif ara..."
                       Text="{Binding Q}"
                       HorizontalOptions="FillAndExpand"
                       PlaceholderColor="{AppThemeBinding Light={StaticResource Accent}, Dark={StaticResource AccentDark}}" />
                <Grid ColumnDefinitions="*,*,*"
                      RowDefinitions="Auto,Auto"
                      ColumnSpacing="12"
                      HorizontalOptions="FillAndExpand">
                    <Picker Grid.Row="0"
                            Grid.Column="0"
                            Title="Kategori"
                            ItemsSource="{Binding Categories}"
                            ItemDisplayBinding="{Binding Name}"
                            SelectedItem="{Binding SelectedCategory}"
                            HorizontalOptions="FillAndExpand" />

                    <Picker Grid.Row="0"
                            Grid.Column="1"
                            Title="Zorluk"
                            ItemsSource="{Binding DifficultyOptions}"
                            ItemDisplayBinding="{Binding Name}"
                            SelectedItem="{Binding SelectedDifficulty}"
                            HorizontalOptions="FillAndExpand" />

                    <VerticalStackLayout Grid.Row="0" Grid.Column="2" Spacing="4">
                        <Label Text="Hazırlık Süresi" />
                        <TimePicker
                            Time="{Binding MaxPrep}"
                            Format="HH\\:mm"
                            HorizontalOptions="FillAndExpand" />
                    </VerticalStackLayout>

                    <HorizontalStackLayout Grid.Row="1"
                                           Grid.ColumnSpan="3"
                                           Spacing="4"
                                           Padding="0,4,0,0"
                                           VerticalOptions="Center"
                                           HorizontalOptions="Start">
                        <CheckBox IsChecked="{Binding Vegetarian}" />
                        <Label Text="Vejetaryen" VerticalOptions="Center" />
                    </HorizontalStackLayout>
                </Grid>

                <HorizontalStackLayout Spacing="12" HorizontalOptions="FillAndExpand">
                    <Button Text="Uygula"
                            Command="{Binding LoadCommand}"
                            HorizontalOptions="FillAndExpand" />
                    <Button Text="Temizle"
                            Command="{Binding ClearFiltersCommand}"
                            HorizontalOptions="FillAndExpand" />
                </HorizontalStackLayout>

                <Label Text="{Binding Error}" TextColor="Red" />
            </VerticalStackLayout>
        </Frame>
        <!-- ÖNEMLİ: Frame burada kapanıyor -->

        <!-- LISTE -->
        <CollectionView Grid.Row="1"
                        ItemsSource="{Binding Items}"
                        SelectionMode="Single"
                        SelectedItem="{Binding SelectedItem}">
            <CollectionView.ItemsLayout>
                <GridItemsLayout Orientation="Vertical"
                                  Span="3"
                                  HorizontalItemSpacing="4"
                                  VerticalItemSpacing="12" />
            </CollectionView.ItemsLayout>

            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Frame Padding="2" Margin="0" HasShadow="True">
                        <VerticalStackLayout Spacing="2" HorizontalOptions="Center" VerticalOptions="Center">
                            <Image Source="{Binding PhotoUrl, TargetNullValue=dotnet_bot.png}"
                                   HeightRequest="64"
                                   WidthRequest="64"
                                   Aspect="AspectFill" />
                            <Label Text="{Binding Title}"
                                   FontAttributes="Bold"
                                   FontSize="14"
                                   HorizontalTextAlignment="Center" />
                            <Label Text="{Binding UserName}"
                                   FontSize="11"
                                   HorizontalTextAlignment="Center"
                                   TextColor="{StaticResource Gray600}" />
                            <Label Text="{Binding CreatedAt, StringFormat='{0:dd.MM.yyyy}'}"
                                   FontSize="10"
                                   HorizontalTextAlignment="Center"
                                   TextColor="{StaticResource Gray500}" />
                            <HorizontalStackLayout Spacing="4"
                                                   HorizontalOptions="Center"
                                                   VerticalOptions="Center">
                                <Label Text="{Binding PrepTime}"
                                       FontSize="10"
                                       HorizontalTextAlignment="Center" />
                                <Label Text="{Binding Difficulty}"
                                       FontSize="10"
                                       HorizontalTextAlignment="Center" />
                            </HorizontalStackLayout>
                        </VerticalStackLayout>
                    </Frame>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
    </Grid>
</ContentPage>

