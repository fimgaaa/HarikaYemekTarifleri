<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="HarikaYemekTarifleri.Maui.Pages.RecipesPage"
             x:Name="page"
             Title="Tarifler">

    <ContentPage.ToolbarItems>
        <ToolbarItem IconImageSource="profile.jpg"
                     Order="Primary"
                     Priority="0"
                     Command="{Binding ProfileCommand}" />
        <ToolbarItem IconImageSource="logout.png"
                     Order="Primary"
                     Priority="1"
                     Command="{Binding LogoutCommand}" />
    </ContentPage.ToolbarItems>

    <Grid Padding="12">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <!-- FILTRE / ARAMA BLOĞU -->
        <Frame Grid.Row="0"
               Padding="16"
               CornerRadius="12"
               BackgroundColor="{AppThemeBinding Light={StaticResource White}, Dark={StaticResource Gray900}}"
               HasShadow="True"
               HorizontalOptions="FillAndExpand">
            <VerticalStackLayout Spacing="8" HorizontalOptions="FillAndExpand">

                <Entry Placeholder="Tarif ara..."
                       Text="{Binding Q}"
                       HorizontalOptions="FillAndExpand"
                       PlaceholderColor="{AppThemeBinding Light={StaticResource Accent}, Dark={StaticResource AccentDark}}" />
                <Grid ColumnDefinitions="*,Auto,*,*"
                      ColumnSpacing="12"
                      HorizontalOptions="FillAndExpand">
                    <Picker Grid.Column="0"
                            Title="Kategori"
                            ItemsSource="{Binding Categories}"
                            ItemDisplayBinding="{Binding Name}"
                            SelectedItem="{Binding SelectedCategory}"
                            HorizontalOptions="FillAndExpand" />

                    <HorizontalStackLayout Grid.Column="1"
                                           Spacing="4"
                                           VerticalOptions="Center"
                                           HorizontalOptions="Start">
                        <CheckBox IsChecked="{Binding Vegetarian}" />
                        <Label Text="Vejetaryen" VerticalOptions="Center" />
                    </HorizontalStackLayout>

                    <Picker Grid.Column="2"
                            Title="Zorluk"
                            ItemsSource="{Binding DifficultyOptions}"
                            ItemDisplayBinding="{Binding Name}"
                            SelectedItem="{Binding SelectedDifficulty}"
                            HorizontalOptions="FillAndExpand" />


                    <TimePicker Grid.Column="3"
                                Time="{Binding MaxPrep}"
                                Format="HH:mm"
                                HorizontalOptions="FillAndExpand" />
                </Grid>

                <HorizontalStackLayout Spacing="12" HorizontalOptions="FillAndExpand">
                    <Button Text="Uygula"
                            Command="{Binding LoadCommand}"
                            HorizontalOptions="FillAndExpand" />
                    <Button Text="Temizle"
                            Command="{Binding ClearFiltersCommand}"
                            HorizontalOptions="FillAndExpand" />
                </HorizontalStackLayout>

                <Label Text="{Binding Error}" TextColor="Red" />
            </VerticalStackLayout>
        </Frame>
        <!-- ÖNEMLİ: Frame burada kapanıyor -->

        <!-- LISTE -->
        <CollectionView Grid.Row="1"
                        ItemsSource="{Binding Items}"
                        SelectionMode="Single"
                        SelectedItem="{Binding SelectedItem}">
            <CollectionView.ItemsLayout>
                <GridItemsLayout Orientation="Vertical"
                                  Span="3"
                                  HorizontalItemSpacing="12"
                                  VerticalItemSpacing="12" />
            </CollectionView.ItemsLayout>

            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Frame Padding="6" Margin="4" HasShadow="True">
                        <VerticalStackLayout Spacing="6" HorizontalOptions="Center" VerticalOptions="Center">
                            <Image Source="{Binding PhotoUrl, TargetNullValue=dotnet_bot.png}"
                                   HeightRequest="96"
                                   WidthRequest="96"
                                   Aspect="AspectFill" />
                            <Label Text="{Binding Title}"
                                   FontAttributes="Bold"
                                   HorizontalTextAlignment="Center" />
                            <Label Text="{Binding UserName}"
                                   FontSize="12"
                                   HorizontalTextAlignment="Center"
                                   TextColor="{StaticResource Gray600}" />
                            <HorizontalStackLayout Spacing="12"
                                                   HorizontalOptions="Center"
                                                   VerticalOptions="Center">
                                <Label Text="{Binding PrepTime}"
                                       FontSize="12"
                                       HorizontalTextAlignment="Center" />
                                <Label Text="{Binding Difficulty}"
                                       FontSize="12"
                                       HorizontalTextAlignment="Center" />
                            </HorizontalStackLayout>
                        </VerticalStackLayout>
                    </Frame>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
    </Grid>
</ContentPage>

