<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="HarikaYemekTarifleri.Maui.Pages.ProfilePage"
             x:Name="page"
             Title="Profil">
    <ScrollView>
        <Grid Padding="24" RowSpacing="12" ColumnSpacing="12">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <Frame Grid.Row="0"
                   Grid.Column="0"
                   Padding="16"
                   HasShadow="True"
                   CornerRadius="12">
                <VerticalStackLayout Spacing="12">
                    <Label Text="Profil Bilgileri"
                           FontAttributes="Bold"
                           FontSize="18" />
                    <Entry Placeholder="Kullanıcı adı" Text="{Binding UserName}" />
                    <Entry Placeholder="E-posta" Text="{Binding Email}" />
                    <Button Text="Kaydet" Command="{Binding SaveCommand}" />
                </VerticalStackLayout>
            </Frame>

            <Frame Grid.Row="0"
                   Grid.Column="1"
                   Padding="16"
                   HasShadow="True"
                   CornerRadius="12">
                <VerticalStackLayout Spacing="12">
                    <Label Text="Şifre İşlemleri"
                           FontAttributes="Bold"
                           FontSize="18" />
                    <Button Text="Şifre Değiştir" Command="{Binding ChangePasswordCommand}" />
                </VerticalStackLayout>
            </Frame>

            <Frame Grid.Row="1"
                   Grid.Column="0"
                   Grid.ColumnSpan="2"
                   Padding="16"
                   HasShadow="True"
                   CornerRadius="12">
                <VerticalStackLayout Spacing="12">
                    <Label Text="Tariflerim"
                           FontAttributes="Bold"
                           FontSize="18" />
                    <HorizontalStackLayout Spacing="12">
                        <Entry Placeholder="Tariflerde ara" Text="{Binding SearchText}" HorizontalOptions="FillAndExpand" />
                        <Button Text="Yeni Tarif Ekle"
                                Command="{Binding AddRecipeCommand}" />
                    </HorizontalStackLayout>
                    <CollectionView ItemsSource="{Binding Recipes}" SelectionMode="None">
                        <CollectionView.ItemTemplate>
                            <DataTemplate>
                                <Frame Padding="12" Margin="0,0,0,8" HasShadow="False" BorderColor="Transparent">
                                    <Frame.GestureRecognizers>
                                        <TapGestureRecognizer
                                            Command="{Binding BindingContext.OpenRecipeCommand, Source={x:Reference Name=page}}"
                                            CommandParameter="{Binding .}" />
                                    </Frame.GestureRecognizers>
                                    <HorizontalStackLayout Spacing="12" VerticalOptions="Center">
                                        <Label Text="{Binding Title}" VerticalOptions="Center" HorizontalOptions="FillAndExpand" />
                                        <Button Text="Sil"
                                                Command="{Binding BindingContext.DeleteCommand, Source={x:Reference Name=page}}"
                                                CommandParameter="{Binding .}" />
                                    </HorizontalStackLayout>
                                </Frame>
                            </DataTemplate>
                        </CollectionView.ItemTemplate>
                    </CollectionView>
                    <Label Text="{Binding Error}" TextColor="Red" />
                </VerticalStackLayout>
            </Frame>
        </Grid>
    </ScrollView>
</ContentPage>