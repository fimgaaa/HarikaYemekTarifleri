<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="HarikaYemekTarifleri.Maui.Pages.ProfilePage"
             Title="Profil">
    <VerticalStackLayout Padding="24" Spacing="12">
        <!--<Entry Placeholder="Kullanıcı adı" Text="{Binding UserName}" />
        <Entry Placeholder="E-posta" Text="{Binding Email}" />
        <Button Text="Kaydet" Command="{Binding SaveCommand}" />--><!--
		<Entry Placeholder="Kullanıcı adı" Text="{Binding Path=UserName}" />
		<Entry Placeholder="E-posta" Text="{Binding Path=Email}" />
		<Button Text="Kaydet" Command="{Binding Path=SaveCommand}" />-->
		<Image Source="{Binding PhotoUrl}" HeightRequest="120" WidthRequest="120" />
		<Entry Placeholder="Kullanıcı adı" Text="{Binding UserName}" />
		<Entry Placeholder="E-posta" Text="{Binding Email}" />
		<Button Text="Kaydet" Command="{Binding SaveCommand}" />
        <Button Text="Şifre Değiştir" Command="{Binding ChangePasswordCommand}" />
        <CollectionView ItemsSource="{Binding Recipes}">
			<CollectionView.ItemTemplate>
				<DataTemplate>
					<Frame Padding="8" Margin="4" HasShadow="True">
						<Label Text="{Binding Title}" />
					</Frame>
				</DataTemplate>
			</CollectionView.ItemTemplate>
		</CollectionView>
		<Button Text="Yeni Tarif Ekle" Command="{Binding AddRecipeCommand}" />
        <Label Text="{Binding Error}" TextColor="Red" />
    </VerticalStackLayout>
</ContentPage>