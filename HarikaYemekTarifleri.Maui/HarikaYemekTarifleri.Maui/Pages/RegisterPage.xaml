<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="HarikaYemekTarifleri.Maui.Pages.RegisterPage"
             Title="Kayıt">
    <VerticalStackLayout Padding="24" Spacing="12">
        <Entry Placeholder="Kullanıcı adı" Text="{Binding UserName}" />
        <Entry Placeholder="E-posta" Text="{Binding Email}" Keyboard="Email" />
        <Entry Placeholder="Şifre" IsPassword="True" Text="{Binding Password}" />
        <Entry Placeholder="Şifre tekrar" IsPassword="True" Text="{Binding ConfirmPassword}" />
        <Button Text="Üye Ol" Command="{Binding RegisterCommand}" />
        <Label Text="{Binding Error}" TextColor="Red" />
    </VerticalStackLayout>
</ContentPage>